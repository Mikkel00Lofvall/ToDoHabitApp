<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- RecyclerView fills full screen -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_transaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom buttons container (over RecyclerView) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/allowance_bottom_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Balance button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/allowance_btn_balance"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Balance"
            android:textSize="18sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/allowance_btn_transaction"
            app:layout_constraintHorizontal_weight="1"/>

        <!-- Transactions button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/allowance_btn_transaction"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Transactions"
            android:textSize="18sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/allowance_btn_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
