<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- RecyclerView fills full screen -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_todo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- New Task button -->
    <Button
        android:id="@+id/btn_new_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Task"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom buttons container (over RecyclerView) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <!-- Active button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_active"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Active"
            android:textSize="18sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_finished"
            app:layout_constraintHorizontal_weight="1"/>

        <!-- Finished button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_finished"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Finished"
            android:textSize="18sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_active"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
