<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Delete button -->
    <ImageButton
        android:id="@+id/transaction_item_btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Amount / Title -->
    <TextView
        android:id="@+id/transaction_item_tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/transaction_item_btn_delete"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/transaction_item_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample description"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintStart_toStartOf="@id/transaction_item_tv_amount"
        app:layout_constraintEnd_toEndOf="@id/transaction_item_tv_amount"
        app:layout_constraintTop_toBottomOf="@id/transaction_item_tv_amount"/>

    <!-- Time -->
    <TextView
        android:id="@+id/transaction_item_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Created: 12:30 PM"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@id/transaction_item_tv_amount"
        app:layout_constraintEnd_toEndOf="@id/transaction_item_tv_amount"
        app:layout_constraintTop_toBottomOf="@id/transaction_item_tv_description"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
